<h1>Burgers!</h1>

<h2>Pick Your Burger!</h2>

<div class = "col-md-6">
  <div class = "panel panel-default">
    <div class = "panel-heading">
      <h3 class = "panel-title">Burgers</h3>
    </div>

    <div class = "panel-body">
      {{#each result}
        {{#if this.devoured}}
          <ul>
            <div class="list">
              <li>{{burger_name}}</li>
              <button type="submit" class="btn btn-default">Devour</button>
            </div>
          </ul>
        {{/if}}
      {{/each}}

        <p>{{date}}</p>

        <form action="/add?_method=PUT" method="POST">
          <textarea type = "text" name = "burge_name" cols="30" rows=10></textarea><br>
          <button type="submit" class = "btn btn-default">Submit</button>
        </form>
    </div>
</div>

<div class = "col-md-6">

  <div class = "panel panel-default">
    <div class = "panel-heading">
      <h3 class = "panel-title">Devoured</h3>
    </div>

    <div class = "panel-body">
      {{#each result}}
        {{#if this.devoured}}
          
        {{/if}}
      <h3>Testing</h3>
      }
    </div>
  </div>
</div>

<ul>
  {{#each result}}
    <p>{{burger_name}}</p>
    <p>{{data}}</p> 
    {{#unless this.sleepy}}
      <li>
        {{this.name}}

        <form action="/{{this.id}}?_method=PUT" method="POST">
          <input type="hidden" name="sleepy" value="true">
          <button type="submit">SLEEP TIME!</button>
        </form>

        {{> cats/delete-cat}}
      </li>
    {{/unless}}
  {{/each}}
</ul>

<h2>Cats that are sleepy!</h2>

<ul>
  {{#each cats}}
    {{#if this.sleepy}}
      <li>
        {{this.name}}

        <form action="/{{this.id}}?_method=PUT" method="POST">
          <input type="hidden" name="sleepy" value="false">
          <button type="submit">WAKE UP!</button>
        </form>

        {{> cats/delete-cat}}
      </li>
    {{/if}}
  {{/each}}
</ul>

<h2>Add a Cat</h2>
<form class="create-update-form" action="/" method="POST">

  <div class="form-group">
    <label for="ca">Cat Name:</label>
    <input type="text" id="ca" name="name">
  </div>

  <div class="form-group">
    <label for="slee">Sleepy?</label><br>
    <input type="radio" name="sleepy" value="1" checked> Sleepy!<br>
    <input type="radio" name="sleepy" value="0"> Awake
  </div>

  <button type="submit">Add Cat</button>
</form>